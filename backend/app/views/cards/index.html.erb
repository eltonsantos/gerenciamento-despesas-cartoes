<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Last4</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.last4 %></td>
        <td><%= card.user.name %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

